        flex-direction: column; /* Stack elements vertically */
        justify-content: center; /* Center vertically */
        align-items: center; /* Center horizontally */
    }

    .display-4 {
        display: inline-block; /* Ensure inline block for inline styling */
        background-color: rgba(0, 0, 0, 0.7); /* Set a semi-transparent black background color for text */
